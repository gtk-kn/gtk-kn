headers = gio/gio.h \
    gio/gfiledescriptorbased.h \
    gio/giomodule.h \
    gio/gnetworking.h \
    gio/gsettingsbackend.h \
    gio/gunixconnection.h \
    gio/gunixcredentialsmessage.h \
    gio/gunixfdmessage.h \
    gio/gunixinputstream.h \
    gio/gunixmounts.h \
    gio/gunixoutputstream.h \
    gio/gunixsocketaddress.h
headers.linux = gio/gdesktopappinfo.h
headers.osx = gio/gosxappinfo.h
package = org.gtkkn.native.gio
headerFilter = gio/*.h

compilerOpts = -DG_SETTINGS_ENABLE_BACKEND

# pkg-config --cflags gio-unix-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
compilerOpts.linux = \
    -I/usr/include/gio-unix-2.0 \
    -I/usr/include/glib-2.0 \
    -I/usr/lib/glib-2.0/include \
    -I/usr/include/libmount \
    -I/usr/include/blkid \
    -I/usr/include/sysprof-6 \
    -DWITH_GZFILEOP \
    -pthread

compilerOpts.linux_x64 = \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include


compilerOpts.osx = \
    -I/opt/homebrew/Cellar/glib/2.82.4/include/gio-unix-2.0 \
    -I/opt/homebrew/Cellar/glib/2.82.4/include \
    -I/Library/Developer/CommandLineTools/SDKs/MacOSX14.sdk/usr/include/ffi \
    -I/opt/homebrew/Cellar/glib/2.82.4/include/glib-2.0 \
    -I/opt/homebrew/Cellar/glib/2.82.4/lib/glib-2.0/include \
    -I/opt/homebrew/opt/gettext/include \
    -I/opt/homebrew/Cellar/pcre2/10.44/include

# pkg-config --libs gio-unix-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
linkerOpts.linux = \
    -lgio-2.0 \
    -lglib-2.0 \
    -lgobject-2.0

linkerOpts.osx = \
    -L/opt/homebrew/Cellar/glib/2.82.4/lib \
    -lgio-2.0 \
    -lgobject-2.0 \
    -lglib-2.0 \
    -L/opt/homebrew/opt/gettext/lib \
    -lintl

strictEnums = \
    GBusType \
    GConverterResult \
    GCredentialsType \
    GDBusError \
    GDBusMessageByteOrder \
    GDBusMessageHeaderField \
    GDBusMessageType \
    GDataStreamByteOrder \
    GDataStreamNewlineType \
    GDriveStartStopType \
    GEmblemOrigin \
    GFileAttributeStatus \
    GFileAttributeType \
    GFileMonitorEvent \
    GFileType \
    GFilesystemPreviewType \
    GIOErrorEnum \
    GIOModuleScopeFlags \
    GMemoryMonitorWarningLevel \
    GMountOperationResult \
    GNetworkConnectivity \
    GNotificationPriority \
    GPasswordSave \
    GPollableReturn \
    GResolverError \
    GResolverRecordType \
    GResourceError \
    GSocketClientEvent \
    GSocketFamily \
    GSocketListenerEvent \
    GSocketProtocol \
    GSocketType \
    GTlsAuthenticationMode \
    GTlsCertificateRequestFlags \
    GTlsChannelBindingError \
    GTlsChannelBindingType \
    GTlsDatabaseLookupFlags \
    GTlsError \
    GTlsInteractionResult \
    GTlsProtocolVersion \
    GTlsRehandshakeMode \
    GUnixSocketAddressType \
    GZlibCompressorFormat
