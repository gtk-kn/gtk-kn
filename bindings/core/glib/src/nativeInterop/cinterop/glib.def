headers = glib.h glib-unix.h glib/gstdio.h
package = org.gtkkn.native.glib
headerFilter = glib.h glib-*.h glib/*.h glib/deprecated/*.h

# Needed because of https://youtrack.jetbrains.com/issue/KT-73948/Corrupted-String-Returned-by-gettext-in-Kotlin-Native
noStringConversion = g_dcgettext g_dgettext g_dngettext g_dpgettext

# pkg-config --cflags glib-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
compilerOpts.linux = \
    -I/usr/include/glib-2.0 \
    -I/usr/lib/glib-2.0/include \
    -I/usr/include/sysprof-6 \
    -pthread

compilerOpts.linux_x64 = \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include \
    -I/usr/lib64/glib-2.0/include

compilerOpts.osx = \
    -I/opt/homebrew/Cellar/glib/2.82.4/include/glib-2.0 \
    -I/opt/homebrew/Cellar/glib/2.82.4/lib/glib-2.0/include \
    -I/opt/homebrew/opt/gettext/include \
    -I/opt/homebrew/Cellar/pcre2/10.44/include

# pkg-config --libs glib-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
linkerOpts.linux = \
    -lglib-2.0

linkerOpts.linux_x64 = \
    -L/usr/lib64 \
    -L/usr/lib/x86_64-linux-gnu

linkerOpts.osx = \
    -lglib-2.0

strictEnums = \
    GBookmarkFileError \
    GChecksumType \
    GConvertError \
    GDateDMY \
    GDateMonth \
    GDateWeekday \
    GErrorType \
    GFileError \
    GIOChannelError \
    GIOError \
    GIOStatus \
    GKeyFileError \
    GLogWriterOutput \
    GMarkupError \
    GNormalizeMode \
    GNumberParserError \
    GOnceStatus \
    GOptionArg \
    GOptionError \
    GRegexError \
    GSeekType \
    GShellError \
    GSliceConfig \
    GSpawnError \
    GTestFileType \
    GTestLogType \
    GTestResult \
    GThreadError \
    GTimeType \
    GTokenType \
    GTraverseType \
    GUnicodeBreakType \
    GUnicodeScript \
    GUnicodeType \
    GUnixPipeEnd \
    GUriError \
    GUserDirectory \
    GVariantClass \
    GVariantParseError
