headers = glib.h glib-unix.h glib/gstdio.h
package = org.gtkkn.native.glib
headerFilter = glib.h glib-*.h glib/* glib/deprecated/*.h

# pkg-config --cflags glib-2.0
compilerOpts.linux = \
    -I/usr/include/glib-2.0 \
    -I/usr/lib/glib-2.0/include \
    -I/usr/include/sysprof-4 \
    -I/usr/include/libmount \
    -I/usr/include/blkid \
    -pthread

compilerOpts.linux_x64 = \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include

# pkg-config --libs glib-2.0
linkerOpts.linux = \
    -L/usr/local/lib \
    -lglib-2.0

linkerOpts.linux_x64 = \
    -L/usr/lib64 \
    -L/usr/lib/x86_64-linux-gnu

strictEnums = \
    GBookmarkFileError \
    GChecksumType \
    GConvertError \
    GDateDMY \
    GDateMonth \
    GDateWeekday \
    GErrorType \
    GFileError \
    GIOChannelError \
    GIOError \
    GIOStatus \
    GKeyFileError \
    GLogWriterOutput \
    GMarkupError \
    GNormalizeMode \
    GNumberParserError \
    GOnceStatus \
    GOptionArg \
    GOptionError \
    GRegexError \
    GSeekType \
    GShellError \
    GSliceConfig \
    GSpawnError \
    GTestFileType \
    GTestLogType \
    GTestResult \
    GThreadError \
    GTimeType \
    GTokenType \
    GTraverseType \
    GUnicodeBreakType \
    GUnicodeScript \
    GUnicodeType \
    GUnixPipeEnd \
    GUriError \
    GUserDirectory \
    GVariantClass \
    GVariantParseError
