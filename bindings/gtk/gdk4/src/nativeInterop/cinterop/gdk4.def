headers = gdk/gdk.h
package = org.gtkkn.native.gdk
headerFilter = gdk/*.h gdk/deprecated/*.h

# pkg-config --cflags gtk4 | tr ' ' '\n' | sed '$!s/$/ \\/'
compilerOpts.linux = \
    -I/usr/include/gtk-4.0 \
    -I/usr/include/pango-1.0 \
    -I/usr/include/fribidi \
    -I/usr/include/harfbuzz \
    -I/usr/include/gdk-pixbuf-2.0 \
    -I/usr/include/webp \
    -I/usr/include/cairo \
    -I/usr/include/libxml2 \
    -I/usr/include/freetype2 \
    -I/usr/include/libpng16 \
    -I/usr/include/pixman-1 \
    -I/usr/include/graphene-1.0 \
    -mfpmath=sse \
    -msse \
    -msse2 \
    -I/usr/include/glib-2.0 \
    -DWITH_GZFILEOP \
    -I/usr/include/libmount \
    -I/usr/include/blkid \
    -I/usr/include/sysprof-6 \
    -I/usr/include/libxkbcommon \
    -I/usr/include/wayland\
    -pthread


compilerOpts.linux_x64 = \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include \
    -I/usr/lib/x86_64-linux-gnu/graphene-1.0/include \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/lib64/graphene-1.0/include

# pkg-config --libs gtk4 | tr ' ' '\n' | sed '$!s/$/ \\/'
# can't add `-lvulkan`: https://gitlab.com/gtk-kn/gtk-kn/-/issues/91
linkerOpts.linux =\
    -lgtk-4 \
    -lpangocairo-1.0 \
    -lpango-1.0 \
    -lharfbuzz \
    -lgdk_pixbuf-2.0 \
    -lcairo-gobject \
    -lcairo \
    -lgraphene-1.0 \
    -lgio-2.0 \
    -lgobject-2.0 \
    -lglib-2.0 \

strictEnums = \
    GdkAxisUse \
    GdkCrossingMode \
    GdkDevicePadFeature \
    GdkDeviceToolType \
    GdkDragCancelReason \
    GdkEventType \
    GdkFullscreenMode \
    GdkGLError \
    GdkGravity \
    GdkInputSource \
    GdkKeyMatch \
    GdkMemoryFormat \
    GdkNotifyType \
    GdkScrollDirection \
    GdkScrollUnit \
    GdkSubpixelLayout \
    GdkSurfaceEdge \
    GdkTextureError \
    GdkTitlebarGesture \
    GdkTouchpadGesturePhase \
    GdkVulkanError
