    AdwAnimationState \
    AdwCenteringPolicy \
    AdwColorScheme \
    AdwEasing \
    AdwFlapFoldPolicy \
    AdwFlapTransitionType \
    AdwFoldThresholdPolicy \
    AdwLeafletTransitionType \
    AdwNavigationDirection \
    AdwResponseAppearance \
    AdwSqueezerTransitionType \
