linkerOpts.linux = \
    -ladwaita-1 \
    -lgtk-4 \
    -lpangocairo-1.0 \
    -lpango-1.0 \
    -lharfbuzz \
    -lgdk_pixbuf-2.0 \
    -lcairo-gobject \
    -lcairo \
    -lgraphene-1.0 \
    -lgio-2.0 \
    -lgobject-2.0 \
    -lglib-2.0

linkerOpts.osx = \
    -L/opt/homebrew/Cellar/libadwaita/1.6.3/lib \
    -ladwaita-1 \
    -L/opt/homebrew/Cellar/gtk4/4.16.12/lib \
    -lgtk-4 \
    -L/opt/homebrew/Cellar/pango/1.56.1/lib \
    -lpangocairo-1.0 \
    -lpango-1.0 \
    -L/opt/homebrew/Cellar/harfbuzz/10.2.0/lib \
    -lharfbuzz \
    -L/opt/homebrew/Cellar/gdk-pixbuf/2.42.12/lib \
    -lgdk_pixbuf-2.0 \
    -L/opt/homebrew/Cellar/cairo/1.18.2/lib \
    -lcairo-gobject \
    -lcairo \
    -L/opt/homebrew/Cellar/graphene/1.10.8/lib \
    -lgraphene-1.0 \
    -L/opt/homebrew/Cellar/glib/2.82.4/lib \
    -lgio-2.0 \
    -lgobject-2.0 \
    -lglib-2.0 \
    -L/opt/homebrew/opt/gettext/lib \
    -lintl

